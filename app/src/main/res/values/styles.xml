<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorNavigationBar</item>


    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
    </style>

    <style name="fab_add">
        <item name="fab_colorNormal">@color/amberPrimary</item>
        <item name="fab_colorRipple">@color/amberRipple</item>
        <item name="fab_colorPressed">@color/amberPressed</item>
        <item name="fab_showShadow">true</item>
        <item name="fab_shadowColor">@color/shadow</item>
        <item name="fab_shadowRadius">4dp</item>
        <item name="fab_shadowXOffset">1dp</item>
        <item name="fab_shadowYOffset">3dp</item>
    </style>

    <style name="fab_mini">
        <item name="fab_colorNormal">@color/amberPrimary</item>
        <item name="fab_colorRipple">@color/amberRipple</item>
        <item name="fab_colorPressed">@color/amberPressed</item>
        <item name="fab_showShadow">true</item>
        <item name="fab_shadowColor">@color/shadow</item>
        <item name="fab_shadowRadius">3dp</item>
        <item name="fab_shadowXOffset">1dp</item>
        <item name="fab_shadowYOffset">2dp</item>
    </style>

    <style name="fab_day">
        <item name="fab_colorNormal">@color/whitePrimary</item>
        <item name="fab_colorRipple">@color/whiteRipple</item>
        <item name="fab_colorPressed">@color/whitePressed</item>
        <item name="fab_showShadow">true</item>
        <item name="fab_shadowColor">@color/shadow</item>
        <item name="fab_shadowRadius">4dp</item>
        <item name="fab_shadowXOffset">1dp</item>
        <item name="fab_shadowYOffset">3dp</item>
    </style>

    <style name="fab_night">
        <item name="fab_colorNormal">@color/black</item>
        <item name="fab_colorRipple">@color/blackRipple</item>
        <item name="fab_colorPressed">@color/blackPressed</item>
        <item name="fab_showShadow">true</item>
        <item name="fab_shadowColor">@color/shadow</item>
        <item name="fab_shadowRadius">4dp</item>
        <item name="fab_shadowXOffset">1dp</item>
        <item name="fab_shadowYOffset">3dp</item>
    </style>

    <style name="fab_backup">
        <item name="fab_colorNormal">@color/indigoPrimary</item>
        <item name="fab_colorRipple">@color/indigoRipple</item>
        <item name="fab_colorPressed">@color/indigoPressed</item>
        <item name="fab_showShadow">true</item>
        <item name="fab_shadowColor">@color/shadow</item>
        <item name="fab_shadowRadius">4dp</item>
        <item name="fab_shadowXOffset">1dp</item>
        <item name="fab_shadowYOffset">3dp</item>
    </style>

    <style name="fab_restore">
        <item name="fab_colorNormal">@color/greenPrimary</item>
        <item name="fab_colorRipple">@color/greenRipple</item>
        <item name="fab_colorPressed">@color/greenPressed</item>
        <item name="fab_showShadow">true</item>
        <item name="fab_shadowColor">@color/shadow</item>
        <item name="fab_shadowRadius">4dp</item>
        <item name="fab_shadowXOffset">1dp</item>
        <item name="fab_shadowYOffset">3dp</item>
    </style>

</resources>
